<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinFormsIoT.HelloWorldPage">
    <StackLayout Orientation="Vertical"  HorizontalOptions="Center" VerticalOptions="Center" x:Name="_mStackLayout">
        <Label Text="Hello World!" />
        <Label x:Name="_mTextIR" Text="IR:" />
        <Button Text="Get IR" Clicked="OnClickButtonIR" BackgroundColor="Gray" />
        <Button Text="Play Sound" Clicked="OnClickPlaySound" BackgroundColor="Gray" />
        <StackLayout Orientation="Horizontal">
            <Button Text="Blue On" Clicked="OnClickBlueOn"  BackgroundColor="Aqua" />
            <Button Text="Blue Off" Clicked="OnClickBlueOff"  BackgroundColor="Aqua" />
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <Button Text="Red On" Clicked="OnClickRedOn"  BackgroundColor="Red" />
            <Button Text="Red Off" Clicked="OnClickRedOff"  BackgroundColor="Red" />
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <Button Text="Yellow On" Clicked="OnClickYellowOn"  BackgroundColor="Yellow" />
            <Button Text="Yellow Off" Clicked="OnClickYellowOff"  BackgroundColor="Yellow" />
        </StackLayout>
        <Button Text="Quit" Clicked="OnClickQuit" BackgroundColor="Gray" />
    </StackLayout>
</ContentPage>